<!-- nextra-core/src/main/resources/logback-spring.xml -->
<configuration scan="true">

    <!-- Console JSON appender (prod-friendly) -->
    <appender name="JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <version/>
                <loggerName/>
                <threadName/>
                <logLevel/>
                <message/>
                <arguments/>
                <stackTrace/>
                <!-- MDC fields: -->
                <mdc>
                    <includeMdcKeyName>correlationId</includeMdcKeyName>
                    <includeMdcKeyName>method</includeMdcKeyName>
                    <includeMdcKeyName>path</includeMdcKeyName>
                    <includeMdcKeyName>remoteAddr</includeMdcKeyName>
                    <includeMdcKeyName>user</includeMdcKeyName>
                </mdc>
            </providers>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="JSON"/>
    </root>

    <!-- Reduce noise -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.hibernate.SQL" level="WARN"/>
</configuration>
